<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroud"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:orientation="vertical">
        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@drawable/img"
            android:layout_gravity="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ba Con Rồng"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="@color/white"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="BPN"
            android:textSize="25dp"
            android:layout_gravity="center"
            android:textColor="@color/white"/>
    </LinearLayout>
    <Button
        android:layout_marginTop="10dp"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:text="Play"
        android:textSize="25dp"
        android:textColor="@color/white"
        android:background="@drawable/button"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ai ố xì mà"
                android:id="@+id/tenbaihat1"
                android:textColor="@color/white"
                android:textSize="25dp"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tenbaihat1"
                android:text="Nguyễn Đức Phương"
                android:layout_marginLeft="10dp"
                android:textSize="20dp"
                android:textColor="#E4DFDF"/>
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_toRightOf="@+id/tenbaihat1"
                android:background="@drawable/play"
                android:layout_marginLeft="200dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/white"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nàng Thơ"
                android:id="@+id/tenbaihat2"
                android:textColor="@color/white"
                android:textSize="25dp"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tenbaihat2"
                android:text="Hoàng Dũng"
                android:layout_marginLeft="10dp"
                android:textSize="20dp"
                android:textColor="#E4DFDF"/>
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_toRightOf="@+id/tenbaihat2"
                android:background="@drawable/play"
                android:layout_marginLeft="203dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/white"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thằng Điên"
                android:id="@+id/tenbaihat3"
                android:textColor="@color/white"
                android:textSize="25dp"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tenbaihat3"
                android:text="Justatee, Phương Ly "
                android:layout_marginLeft="10dp"
                android:textSize="20dp"
                android:textColor="#E4DFDF"/>
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_toRightOf="@+id/tenbaihat3"
                android:background="@drawable/play"
                android:layout_marginLeft="185dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/white"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lối Nhỏ"
                android:id="@+id/tenbaihat4"
                android:textColor="@color/white"
                android:textSize="25dp"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tenbaihat4"
                android:text="Đen Vâu "
                android:layout_marginLeft="10dp"
                android:textSize="20dp"
                android:textColor="#E4DFDF"/>
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_toRightOf="@+id/tenbaihat4"
                android:background="@drawable/play"
                android:layout_marginLeft="226dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/white"/>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <SeekBar
            android:layout_width="390dp"
            android:layout_height="50dp"
            android:id="@+id/seekbar"
            android:layout_marginTop="5dp">
        </SeekBar>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ai ố xì mà - "
                android:textColor="@color/white"
                android:id="@+id/tenbaihat"
                android:textSize="20dp"
                android:layout_marginLeft="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tenbaihat"
                android:text="(Nguyễn Đức Phương)"
                android:textColor="@color/white"
                android:id="@+id/tentacgia"
                android:layout_marginTop="2dp"
                android:textSize="18dp"/>
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/play"
                android:layout_toRightOf="@id/tentacgia"
                android:background="@drawable/play2"
                android:backgroundTint="@color/white"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"/>
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_toRightOf="@+id/play"
                android:background="@drawable/play3"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:backgroundTint="@color/white"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>